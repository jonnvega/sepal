{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "builder_instance_ami": "",
    "region": "",
    "version": "",
    "userHome": "",
    "efs_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `builder_instance_ami`}}",
      "instance_type": "g4dn.xlarge",
      "ssh_username": "ec2-user",
      "ami_name": "Builder",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_type": "gp2",
          "volume_size": 20,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/xvdf",
          "volume_type": "gp2",
          "volume_size": 40,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_type": "gp2",
          "volume_size": 20,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/xvdf",
          "volume_type": "gp2",
          "volume_size": 40,
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "builder-ami.yml",
      "extra_arguments": [
        "--extra-vars",
        "config_home={{user `config_home`}} secret_vars_file={{user `config_home`}}/secret.yml efs_id={{user `efs_id`}} version={{user `version`}} region={{user `region`}}"
      ],
      "user": "ec2-user"
    }
  ]
}
