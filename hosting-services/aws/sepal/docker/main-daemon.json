{
    "storage-driver": "devicemapper",
    "storage-opts": [
        "dm.datadev=/dev/vg-docker/data",
        "dm.metadatadev=/dev/vg-docker/metadata"
    ],
    "log-driver": "syslog",
    "log-opts": {
        "syslog-address": "{{ lookup('env', 'SYSLOG_ADDRESS') }}",
        "tag": "docker/{{ '{{.Name}}' }}",
        "labels": "dev",
        "syslog-facility": "daemon"
    }
}
