{
    "storage-driver": "devicemapper",
    "storage-opts": [
        "dm.datadev=/dev/vg-docker/data",
        "dm.metadatadev=/dev/vg-docker/metadata"
    ],
    "log-driver": "syslog",
    "log-opts": {
        "cache-disabled": "true",
        "syslog-address": "{{ SYSLOG_ADDRESS }}",
        "tag": "docker/{{ '{{.Name}}' }}",
        "labels": "dev",
        "syslog-facility": "daemon"
    },
    "metrics-addr" : "127.0.0.1:9323",
    "experimental" : true
}
